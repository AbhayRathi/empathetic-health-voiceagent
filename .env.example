# Environment Variables Template
# Copy this to .env.local and fill in your values

# Telephony (choose one)
TWILIO_ACCOUNT_SID=REDACTED
TWILIO_AUTH_TOKEN=REDACTED
TWILIO_PHONE_NUMBER=REDACTED
TWILIO_AUTH_SECRET=REDACTED
# OR
TELNYX_API_KEY=REDACTED
TELNYX_PUBLIC_KEY=REDACTED

# ASR & Transcription
DEEPGRAM_API_KEY=REDACTED
# OR (if using AssemblyAI instead of Deepgram)
ASSEMBLYAI_API_KEY=REDACTED

# TwinMind High-Accuracy Transcription
TWINMIND_API_KEY=REDACTED
TWINMIND_BASE_URL=https://api.twinmind.dev
TWINMIND_MODEL=ear-3-pro
TWINMIND_MAX_RPM=60
TWINMIND_MAX_RPD=1000

# LLM
OPENAI_API_KEY=REDACTED
OPENAI_MODEL=gpt-4-turbo-preview

# TTS
ELEVENLABS_API_KEY=REDACTED
ELEVENLABS_VOICE_ID=REDACTED

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_BASE=http://localhost:3000

# WebSocket Server
WS_PORT=8080

# Database (optional for MVP, in-memory fallback available)
DATABASE_URL=postgresql://user:password@localhost:5432/healthvoice

# Redis (optional for MVP, in-memory fallback available)
REDIS_URL=redis://localhost:6379

# Security
ENCRYPTION_KEY=REDACTED
JWT_SECRET=REDACTED

# Developer Mode (set to 'true' to use mock services when API keys are missing)
# When true, all external providers will use mock implementations
DEVELOPER_MODE=false
